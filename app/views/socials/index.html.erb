<div class="row">
  <div id="tweets" class="col-md-3">
  <p class="social-title">Twitter</p>
    <ul class= "list-group">
     <% @tweets.each do |tweet| %>
     <li class= "list-group-item">
      <%= tweet %>
     </li>
     <% end %>
    </ul>
  </div>  

  <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
  </fb:login-button>

<div id="status">
</div>
</div>